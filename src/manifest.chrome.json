{
  "manifest_version": 3,
  "name": "__MSG_extension_name__",
  "short_name": "__MSG_extension_name_short__",
  "description": "__MSG_extension_desc__",
  "default_locale": "en",
  "homepage_url": "https://extensions.redeviation.com/",
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "css": [
        "css/contentBase.css"
      ],
      "js": [
        "js/extension.js"
      ],
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_icon": "img/icon/dev/128x128.png"
  },
  "commands": {
    "_execute_action": {
      "description": "Toggle the sidebar"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "_favicon",
        "css/sidebar.css",
        "css/overlay.css",
        "css/content.css",
        "css/themes/*",
        "html/newtab.html",
        "img/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "incognito": "split",
  "options_ui": {
    "page": "html/settings.html",
    "open_in_tab": true
  },
  "icons": {
    "256": "img/icon/dev/256x256.png",
    "128": "img/icon/dev/128x128.png",
    "48": "img/icon/dev/48x48.png"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "side_panel": {
    "default_path": "html/sidepanel.html"
  },
  "permissions": [
    "bookmarks",
    "storage",
    "favicon",
    "contextMenus",
    "scripting",
    "unlimitedStorage",
    "fontSettings",
    "sidePanel"
  ],
  "optional_permissions": [
    "tabs",
    "history",
    "topSites"
  ]
}